@model LeaveManagementSystem.Models.ViewAllocationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1 style="color:chocolate;">Details For - @Model.Employee.LastName @Model.Employee.FirstName</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.UserName)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.PhoneNumber)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.FirstName)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.TaxId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.TaxId)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.DateOfBirth)
        </dd>
        <dt class="col-sm-2" style="color:blue;">
            @Html.DisplayNameFor(model => model.Employee.DateJoined)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.DateJoined)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
    <a asp-action="ListEmployees" class="btn btn-outline-dark btn-block">Back to List</a>
</div>
<hr />
<h2 style="color:chocolate;">Leave Allocations</h2>
<hr />
<div class="card">
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.LeaveAllocations)
        {
            <li class="list-group-item" style="background:beige;">
                <h6 style="color:blue;">@item.LeaveType.Name <span class="badge badge-secondary" title="Edit">@item.NumberOfDays</span>&nbsp;|&nbsp; <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fade fa-pencil"></i>Edit</a></h6>
            </li>
        }
    </ul>
</div>
