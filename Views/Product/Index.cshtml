@model IEnumerable<LeaveManagementSystem.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                Product Id
            </th>
            <th>
                Category Name
            </th>
            <th>
                Product Name
            </th>
            <th>
                Price
            </th>
            <th>
                Created Date
            </th>
            <th>
                Modified Date
            </th>
            <th>
                Created By
            </th>
            <th>
                Modified By
            </th>
            <th>
                Quantity
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                @if (User.IsInRole("Administrator"))
                {
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ProId">
                            <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                        </a> |
                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ProId">
                            <i class="fas fa-info-circle" aria-hidden="true"></i>
                        </a>  |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProId" onclick="return confirm('Are You Sure You Want To Delete This Record ??')">
                            <i class="fas fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblData').DataTable();
        });
    </script>

}
