@using Microsoft.AspNetCore.Identity
@using LeaveManagementSystem.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="color:blue;">
        <a  class="nav-link text-gray-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fas fa-user-alt"></i>&nbsp;
            <p>Welcome <strong>@User.Identity.Name</strong></p>
        </a>
    </li>
    <li class="nav-item" style="color:blue;">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-gray-dark">
                <i class="fas fa-sign-out-alt"></i>&nbsp;
                <p><strong>Logout</strong></p>
            </button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-gray-dark" asp-area="Identity" asp-page="/Account/Register">
            <i class="fas fa-registered"></i>
            <p><strong>Register</strong></p>        
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-gray-dark" asp-area="Identity" asp-page="/Account/Login">
            <i class="fas fa-user"></i>
            <p><strong>Login</strong></p>        
        </a>
    </li>
}
</ul>
